@model IEnumerable<PruSignBackEnd.Data.Entities.Device>

@{
    ViewBag.Title = "Devices";
}

<h2>Devices</h2>
@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("SearchText")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    @if (Model.Any())
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    <a href="@Url.RouteUrl("selectedDevice", new RouteValueDictionary(new {imei = item.Imei, User = item.User}))">Ingresar</a>
                    @*@Html.ActionLink("Details", "Index", "DeviceLog", new { username = item.User }, new { })*@
                </td>
            </tr>
        }
    }
    else
    {
        <p>There is no data to display</p>
    }
</table>
